<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.kosta.mapper.MovieMapper">
		<insert id="movieinsert" parameterType="java.util.List">
			insert into filmbox_movie (rank,movieCd,movieNm,openDt,image)
			values
			<foreach item="item" index="index" collection="list" separator=" , ">
				(#{item.rank}, #{item.movieCd}, #{item.movieNm}, #{item.openDt}, #{item.image} ,now())
			</foreach>
		</insert>
		<select id="getMovieList" resultType="com.kosta.dto.MovieDTO">
			select rank, movieCd, movieNm, openDt, image
			from filmbox_movie
			order by rank;
		</select>
		<select id="updatedate" resultType="string">
			SELECT update_date FROM filmbox_movie
			WHERE rank=1;
		</select>
		
    </mapper>
    
    